&GLOBAL
  PROJECT c10h16
  RUN_TYPE MD
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep

  &PRINT
    &FORCES
    &END
    &TOTAL_NUMBERS  ON
    &END TOTAL_NUMBERS
  &END PRINT

  &DFT

    BASIS_SET_FILE_NAME BASIS_MOLOPT
    POTENTIAL_FILE_NAME POTENTIAL
    WFN_RESTART_FILE_NAME RESTART.wfn

    &MGRID
      CUTOFF 400
      REL_CUTOFF 60
      NGRIDS 6
    &END MGRID

    &QS
      EPS_DEFAULT 1.0E-16
    &END QS

    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-6
      MAX_SCF 300

      ADDED_MOS 20
      &DIAGONALIZATION
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.5
        BETA  0.5
        NBROYDEN 8
      &END MIXING
    &END SCF

    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
    &END XC

  &END DFT

  &SUBSYS

    &KIND C
      ELEMENT C
      BASIS_SET ORB DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND H
      ELEMENT H
      BASIS_SET ORB DZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND

    &CELL
      PERIODIC NONE
      A 15.0 0.00 0.00
      B 0.00 15.0 0.00
      C 0.00 0.00 15.0
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME coord.xyz
      COORD_FILE_FORMAT XYZ
    &END
  &END SUBSYS
&END FORCE_EVAL


&MOTION
  &MD
    ENSEMBLE NVT
    TEMPERATURE [K] 300
    TIMESTEP [fs] 1.0
    STEPS 100
    COMVEL_TOL 0.0
    &THERMOSTAT
      REGION GLOBAL
      TYPE CSVR
        &CSVR
          TIMECON 16
        &END
    &END THERMOSTAT
  &END
  &PRINT
    &TRAJECTORY
      &EACH
        MD 1
      &END EACH
    &END TRAJECTORY
    &VELOCITIES ON
    &END VELOCITIES
    &FORCES ON
    &END FORCES
    &RESTART
      BACKUP_COPIES 1
      &EACH
        MD 1
      &END EACH
    &END RESTART
  &END PRINT
&END

