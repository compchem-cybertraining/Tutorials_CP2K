&GLOBAL
  PROJECT cspbi3_cubic
  RUN_TYPE ENERGY
  PRINT_LEVEL MEDIUM
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep

   &PROPERTIES
    &TDDFPT
       NSTATES     5            # number of excited states
       MAX_ITER    200           # maximum number of Davidson iterations
       CONVERGENCE [eV] 1.0e-5   # convergence on maximum energy change between iterations
       &MGRID
          NGRIDS 25
          CUTOFF 100
       &END

       RESTART     .FALSE.
       WFN_RESTART_FILE_NAME RESTART.tdwfn

    &END TDDFPT
  &END PROPERTIES

  &PRINT
    &FORCES
    &END
    &TOTAL_NUMBERS  ON
    &END TOTAL_NUMBERS
  &END PRINT

  &DFT

    &PRINT
      &PDOS SILENT
        COMPONENTS T
        NLUMO  -1
      &END PDOS
      &MO_CUBES
        NLUMO 5
        NHOMO 5
        WRITE_CUBE .TRUE.
        STRIDE 1 1 1
      &END
  
      &MULLIKEN OFF
      &END
      &HIRSHFELD OFF
      &END
  
    &END PRINT

    BASIS_SET_FILE_NAME /home/97425008/project_2d_perovskite/cutoff_analysis/BASIS_MOLOPT
    POTENTIAL_FILE_NAME /home/97425008/project_2d_perovskite/cutoff_analysis/POTENTIAL
    WFN_RESTART_FILE_NAME RESTART.wfn

    &MGRID
      NGRIDS 25
      CUTOFF 300
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-16
    &END QS
    &SCF
      SCF_GUESS RESTART
      EPS_SCF 1.0E-6
      MAX_SCF 50

      !&OT
      !  PRECONDITIONER FULL_ALL
      !  MINIMIZER DIIS
      !&END OT

      ADDED_MOS 50
      !CHOLESKY INVERSE
      !&SMEAR ON
      !  METHOD FERMI_DIRAC
      !  ELECTRONIC_TEMPERATURE [K] 300
      !&END SMEAR
      &DIAGONALIZATION ON
        ALGORITHM STANDARD
      &END DIAGONALIZATION
      &MIXING
        METHOD BROYDEN_MIXING
        ALPHA 0.5
        BETA  0.5
        NBROYDEN 8
      &END MIXING

    &END SCF
    &XC
      &XC_FUNCTIONAL PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
         POTENTIAL_TYPE PAIR_POTENTIAL 
         &PAIR_POTENTIAL
            PARAMETER_FILE_NAME /home/97425008/project_2d_perovskite/cutoff_analysis/dftd3.dat
            TYPE DFTD3
            REFERENCE_FUNCTIONAL PBE
            R_CUTOFF [angstrom] 16
         &END
      &END VDW_POTENTIAL
      &XC_GRID
        XC_DERIV SPLINE2_SMOOTH
      &END XC_GRID
    &END XC
  &END DFT
  &SUBSYS

    &KIND Cs
      ELEMENT Cs
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q9
    &END KIND 
    &KIND Pb
      ELEMENT Pb
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND 
    &KIND I
      ELEMENT I 
      BASIS_SET ORB DZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q7
    &END KIND


    &CELL
      PERIODIC XYZ
!A        8.4280000000         0.0000000000         0.0000000000
!B        0.0000000000         8.9860000610         0.0000000000
!C        0.0000000000         0.0000000000        26.2329998016
      A 12.8282909393 0.00 0.00
      B 0.00 12.8282909393 0.00
      C 0.00 0.00 12.8282909393
    &END CELL
    &TOPOLOGY
      COORD_FILE_NAME coord.xyz
      COORD_FILE_FORMAT XYZ
    &END
  &END SUBSYS
&END FORCE_EVAL
